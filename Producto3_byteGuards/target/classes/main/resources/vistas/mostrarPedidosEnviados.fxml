<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="grupofp.controlador.MostrarPedidosEnviadosController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Pedidos Enviados" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ListView fx:id="listaPedidos" prefHeight="300" prefWidth="400"/>

    <Button text="Actualizar lista" onAction="#cargarPedidosEnviados"/>

</VBox>
